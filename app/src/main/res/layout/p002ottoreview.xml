        android:id="@+id/buttonOttoReviewP002" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.incir.myapplication.fragment.P002FragmentTop"
        android:id="@+id/fragmentTopP002"
        android:layout_centerVertical="true"
